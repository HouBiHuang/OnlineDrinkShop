@model OnlineDrinkShop.Models.Product
@{
    ViewData["Title"] = "Create";
}

<h2 class="text-secondary">新增產品</h2>
<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="p-4 rounded border border-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <h3 class="text-danger">@ViewBag.ProductError</h3>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductName">品名:</label>
            </div>
            <div class="col-5">
                <input asp-for="ProductName" class="form-control"/>
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="SmallPrice">小杯價格:</label>
            </div>
            <div class="col-5">
                <input asp-for="SmallPrice" class="form-control"/>
            </div>
            <span asp-validation-for="SmallPrice" class="text-danger"></span>
        </div>

        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="BigPrice">大杯價格:</label>
            </div>
            <div class="col-5">
                <input asp-for="BigPrice" class="form-control"/>
            </div>
            <span asp-validation-for="BigPrice" class="text-danger"></span>
        </div>

        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="Image">照片:</label>
            </div>
            <div class="col-5">
                <input asp-for="Image" class="form-control" type="file" />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="TagId">Tag:</label>
            </div>
            <div class="col-5">
                <select asp-for="TagId" asp-items="(SelectList?)@ViewData["tagId"]" class="form-select"></select>
            </div>
            <span asp-validation-for="TagId" class="text-danger"></span>
        </div>

        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="Remark">備註:</label>
            </div>
            <div class="col-5">
                <input asp-for="Remark" class="form-control"/>
            </div>
            @*<span asp-validation-for="Remark" class="text-danger"></span>*@
        </div>

        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="SugarLevelIsAvailable">糖度是否可選?</label>
            </div>
            <div class="col-5">
                <input asp-for="SugarLevelIsAvailable" class="" type="checkbox"/>
            </div>
            <span asp-validation-for="SugarLevelIsAvailable" class="text-danger"></span>
        </div>

        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="IceLevelIsAvailable">冰度是否可選?</label>
            </div>
            <div class="col-5">
                <input asp-for="IceLevelIsAvailable" class="" type="checkbox"/>
            </div>
            <span asp-validation-for="IceLevelIsAvailable" class="text-danger"></span>
        </div>

        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="IsAvailable">是否上架?</label>
            </div>
            <div class="col-5">
                <input asp-for="IsAvailable" class="" type="checkbox"/>
            </div>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="儲存"/>
            <a asp-controller="Product" asp-action="Index" class="btn btn-success">回到清單</a>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}