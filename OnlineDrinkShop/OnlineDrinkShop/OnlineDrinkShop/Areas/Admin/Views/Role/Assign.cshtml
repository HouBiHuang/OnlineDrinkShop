@model OnlineDrinkShop.Areas.Admin.Models.UserRoleVm
@{
    ViewData["Title"] = "Assign";
}

<h2 class="text-secondary">指派Role</h2>
<form asp-action="Assign" enctype="multipart/form-data" method="post">
    <div class="p-4 rounded border border-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <h3 class="text-danger">@ViewBag.RoleError</h3>

        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="UserId">使用者名稱:</label>
            </div>
            <div class="col-5">
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-select"></select>
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group row mb-2">
            <div class="col-2">
                <label asp-for="RoleName">Role名稱:</label>
            </div>
            <div class="col-5">
                <select asp-for="RoleName" asp-items="ViewBag.RoleName" class="form-select"></select>
            </div>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="確認"/>
            <a asp-controller="Role" asp-action="Index" class="btn btn-success">回到清單</a>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}