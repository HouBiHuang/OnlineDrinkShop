@{
    ViewData["Title"] = "Edit";
}
   
<br />

<h2 class="text-secondary">編輯Role</h2>
<form asp-action="Edit" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border border-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3 class="text-danger">@ViewBag.msg</h3>

        <div class="form-group row">
            <div class="col-2">
                <label>Role名稱:</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id"/>
            <div class="col-5">
                <input id="name" name="name" class="form-control" value="@ViewBag.name"/>
            </div>
        </div>
     
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="更新"/>
            <a asp-action="Index" class="btn btn-success">回到清單</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script type="text/javascript">
    $(document).ready(function () { 
        $("#role-form").validate({
            rules: {
                name : {
                    required: true,
                }
            },
            messages: {
                name: "請輸入名稱"
            }   
        });
    });
</script>
}