@model OnlineDrinkShop.Models.Tag
@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-secondary">刪除Tag</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border border-dark">
        <input type="hidden" asp-for="Id"/>
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Tag_Name">Tag名稱:</label>
            </div>
            <div class="col-5">
                <input asp-for="Tag_Name" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="Tag_Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" id="DeleteButton" value="刪除"/>
            <a asp-controller="Tag" asp-action="Index" class="btn btn-success">回到清單</a>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script type="text/javascript">
    $(document).ready(function(){
        $("#DeleteButton").click(function(){
            if (!confirm("確認要刪除嗎?")){
                return false;
            }
        });
    });
</script>
}