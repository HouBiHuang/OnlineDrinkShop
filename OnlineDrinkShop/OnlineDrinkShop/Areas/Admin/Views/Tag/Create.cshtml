@model OnlineDrinkShop.Models.Tag
@{
    ViewData["Title"] = "Create";
}

<h2 class="text-secondary">新增Tag</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border border-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <h3 class="text-danger">@ViewBag.TagError</h3>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Tag_Name">Tag名稱:</label>
            </div>
            <div class="col-5">
                <input asp-for="Tag_Name" class="form-control"/>
            </div>
            <span asp-validation-for="Tag_Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="儲存"/>
            <a asp-controller="Tag" asp-action="Index" class="btn btn-success">回到清單</a>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}