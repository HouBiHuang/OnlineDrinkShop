@model OnlineDrinkShop.Models.Tag
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-secondary">Tag細節</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border border-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Tag_Name">Tag名稱:</label>
            </div>
            <div class="col-5">
                <input asp-for="Tag_Name" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="Tag_Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-controller="Tag" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">編輯</a>
            <a asp-controller="Tag" asp-action="Index" class="btn btn-success">回到清單</a>
        </div>
    </div>
</form>