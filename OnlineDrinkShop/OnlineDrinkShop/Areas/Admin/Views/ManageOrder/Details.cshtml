@model OnlineDrinkShop.Models.Order
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-secondary">訂單細節</h2>
<div class="p-4 rounded border border-dark row">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

        <div class="col-12 text-center">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="OrderNo">訂單編號:</label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id"/>
                    <input asp-for="OrderNo" class="form-control" readonly/>
                </div>
                <span asp-validation-for="OrderNo" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-4">
                    <label asp-for="UserId">訂購帳號ID:</label>
                </div>
                <div class="col-8">
                    <input asp-for="UserId" class="form-control" readonly />
                </div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-4">
                    <label asp-for="UserName">訂購人:</label>
                </div>
                <div class="col-8">
                    <input asp-for="UserName" class="form-control" readonly/>
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-4">
                    <label asp-for="PhoneNo">電話:</label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNo" class="form-control" readonly/>
                </div>
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-4">
                    <label asp-for="Email">信箱:</label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" class="form-control" readonly/>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-4">
                    <label asp-for="Address">地址:</label>
                </div>
                <div class="col-8">
                    <input asp-for="Address" class="form-control" readonly/>
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-4">
                    <label asp-for="Total">金額:</label>
                </div>
                <div class="col-8">
                    <input asp-for="Total" class="form-control" readonly/>
                </div>
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-4">
                    <label asp-for="OrderDate">訂購時間:</label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderDate" class="form-control" readonly/>
                </div>
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>

            <div class="form-group row mt-2">
                <div class="col-4">
                    <label asp-for="OrderIsComplete">訂單是否已完成?</label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderIsComplete" class="" type="checkbox" disabled/>
                </div>
                <span asp-validation-for="OrderIsComplete" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <table class="table table-bordered border-dark">
                <thead>
                    <tr>
                        <th>品項</th>
                        <th>甜度</th>
                        <th>冰度</th>
                        <th>大小</th>
                        <th>價格</th>
                        <th>備註</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetail)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.SugarLevel</td>
                            <td>@item.IceLevel</td>
                            <td>@item.Size</td>
                            <td>@item.Price</td>
                            <td>@item.Remark</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="row text-center">
            <div class="form-group">
                <a asp-controller="ManageOrder" asp-action="Index" class="btn btn-success">回到清單</a>
            </div>
        </div>
</div>