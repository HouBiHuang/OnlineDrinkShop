@using static Microsoft.EntityFrameworkCore.DbLoggerCategory.Model
@model OnlineDrinkShop.Models.ApplicationUser
@{
    ViewData["Title"] = "編輯";
}
   
<br />

<h2 class="text-secondary">編輯使用者</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border border-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <h3>@ViewBag.message</h3>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName">Email:</label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" class="form-control" readonly/>
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="UserFullName">使用者全名:</label>
            </div>
            <div class="col-5">
                <input asp-for="UserFullName" class="form-control" />
            </div>
            <span asp-validation-for="UserFullName" class="text-danger"></span>
        </div>

        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="PhoneNumber">手機號碼:</label>
            </div>
            <div class="col-5">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
     
        <div class="form-group row mt-2">
            <div class="col-2">
                <label asp-for="BonusPoints">回饋點數:</label>
            </div>
            <div class="col-5">
                <input asp-for="BonusPoints" class="form-control" />
            </div>
            <span asp-validation-for="BonusPoints" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="更新"/>
            <a asp-action="Index" class="btn btn-success">回到清單</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}